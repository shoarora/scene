
{
    "name": "scene",
    "version": "1.0",
    "manifest_version": 2,

    "description": "Chrome extensions to save a collection of windows and tabs",
    "icons": {
        "128": "icon128.png"
    },
    "browser_action": {
        "default_icon": "img/defaultIcon19x19.png",
        "default_popup": "popup.html",
        "default_title": "scene"
    },

    "minimum_chrome_version": "18",
    "permissions": ["http://*/*", "https://*/*", "unlimitedStorage", "contextMenus", "cookies", "windows", "storage", "notifications"]
}
